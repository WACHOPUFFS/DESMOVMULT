<%- include('layouts/header.ejs') -%>

<div class="container">
    <%= title %>
    <!-- Leer la informaciÃ³n de la Base de datos -->
    <div class="row">
        <% for(var i = 0; i < Libros.length; i++) { %>

        <div class="col-sm-3">
            <div class="card">
                <img height="400" src="<%= Libros[i].imagen %>" class="card-imagen">
                <div class="card-body">

                    <h5 class="card-title"><%= Libros[i].titulo %></h5>
                    <p class="card-text"><%= Libros[i].ID %></p>
                    <p class="card-text"><%= Libros[i].descripcion %></p>
                    <p class="card-text">Precio: $<%= Libros[i].precio %></p>
                    <a href="editarP" class="btn btn-primary">Editar</a>
                    <a href="/productos/eliminar/<%= Libros[i].ID %>" class="btn btn-secondary">Eliminar</a>
                </div>
            </div>
        </div>
        
        <% } %>
    </div>
</div>

